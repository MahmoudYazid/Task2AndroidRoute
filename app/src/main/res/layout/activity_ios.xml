<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".androidActivity"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ios" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Part1 (Java Se)"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />

        <TextView
            android:id="@+id/text2"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="1.  introduction to java"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />

        <TextView
            android:id="@+id/text3"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="programming"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Overview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text3" />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Compiler and jvm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text5" />

        <TextView
            android:id="@+id/text7"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Project structure"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text6" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Hello world application"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text7" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Variables and Data types"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text8" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="operators"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text9" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Loops(for, while , Do while) "
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text10" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pointshpae"
            android:drawablePadding="8dp"
            android:text="Conditional statement (id , switch)"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="5dp"

            app:layout_constraintTop_toBottomOf="@+id/text11" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
